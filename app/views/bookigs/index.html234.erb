<%= render partial: "layouts/navbar" %>

<div class="container">
  <a class="btn btn-success float-right" href=<%= new_customer_path%> > Create customer </a>
  <table class="table table-hover">
    <thead>
      <tr>
        <th> # </th>
        <th>ID</th>
        <th>name</th>
        <th>phone</th>
        <th>email</th>
      </tr>
    </thead>
    <tbody>
    <% @customers.each_with_index do |t  ,i|%> 
        <tr>
            <td> <%= i%> </td>
            <td> <%= t.id%> </td>
            <td> <%= t.name%> </td>
            <td>  <%= t.phone%></td>
            <td>  <%= t.email%></td>
        </tr>    
    <%end%>   
    </tbody>
  </table>
</div>