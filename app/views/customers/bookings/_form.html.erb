<div class = "container">
 <%= form_with(model: booking, url: customers_bookings_path(booking), local: true) do |form| %>
   <% if booking.errors.any? %>
      <div id="error_explanation">
       <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>
       <ul>
         <% booking.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
    <h3> Venue Name: <%= @venue.name%></h3>

      <input type="hidden" name="booking[venue_id]" value=<%= @venue.id%>>

      <div class="form-group col-md-6 ">
       <%= form.label :group,"No of People" %>
       <%= form.text_field :group, required: true, class: 'form-control' %>
      </div>

      <div class="form-group col-md-6 ">
       <%= form.label :date %>
       <%= form.date_select :date   %>
      </div>
   
      <div class="actions">
       <%= form.submit  class: 'btn btn-lg btn-primary' %>
      </div> 
  <% end %>
</div>